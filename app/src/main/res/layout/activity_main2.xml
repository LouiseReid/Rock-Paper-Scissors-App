<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b65d737e"
    tools:context="com.example.louisereid.rockpaperscissors.Main2Activity">

    <TextView
        android:id="@+id/ResultTxt"
        android:layout_width="164dp"
        android:layout_height="95dp"
        android:layout_marginBottom="51dp"
        android:layout_marginRight="44dp"
        android:textAlignment="center"
        android:textColor="#3A484F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Result" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="170dp"
        android:layout_height="62dp"
        android:text="@string/computer_picked"
        android:textAlignment="center"
        android:textColor="#3A484F"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginRight="41dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/compTotal" />

    <ImageButton
        android:id="@+id/rockBtn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="false"
        android:background="@drawable/rock"
        android:onClick="onRockButtonPressed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/paperBtn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/paper"
        android:onClick="onPaperButtonPressed"
        app:layout_constraintBottom_toTopOf="@+id/scissorsBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rockBtn"
        app:layout_constraintRight_toLeftOf="@+id/compPick"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:id="@+id/scissorsBtn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="42dp"
        android:background="@drawable/scissors"
        android:onClick="onScissorsButtonPressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/compPick"
        android:layout_width="160dp"
        android:layout_height="176dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="8dp"
        android:background="#005d737e"
        app:layout_constraintBottom_toTopOf="@+id/ResultTxt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/playerTotal"
        android:layout_width="72dp"
        android:layout_height="46dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/rockBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:text="Your Total" />

    <TextView
        android:id="@+id/compTotal"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="23dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintLeft_toRightOf="@+id/playerTotal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:text="Computer Total" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="16dp"
        android:text="@string/your_total"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/computer_total"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
